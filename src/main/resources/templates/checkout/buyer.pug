extends ../layout

block content
  h2 Buyer Information

  if error
    .error-message(data-test="buyer-error-message")= error

  .checkout-progress
    span.step.active Buyer Info
    span.step Delivery
    span.step Payment
    span.step Confirmation

  //- Auth options: show login/register for anonymous, or logged-in status for registered users
  if identity.isAnonymous()
    .auth-options(data-test="buyer-auth-options")
      p Already have an account? Log in to speed up checkout.
      .auth-buttons
        a.btn.btn-secondary(href="/login?returnUrl=/checkout/buyer" data-test="buyer-login-link") Login
        a.btn.btn-secondary(href="/register?returnUrl=/checkout/buyer" data-test="buyer-register-link") Register
  else
    .auth-options.logged-in
      p Logged in as #{identity.email().orElse('')}

  .session-summary
    p Session ID: #{session.sessionId()}
    p Status: #{session.status()}

  form(method="post" action="/checkout/buyer" data-test="buyer-form")
    .form-group
      label(for="email") Email Address
      - var emailValue = session.buyerInfo() ? session.buyerInfo().email() : (identity.isRegistered() ? identity.email().orElse('') : '')
      input#email(type="email" name="email" required placeholder="your@email.com" value=emailValue data-test="buyer-email-input")

    .form-group
      label(for="firstName") First Name
      input#firstName(type="text" name="firstName" required placeholder="First Name" value=(session.buyerInfo() ? session.buyerInfo().firstName() : '') data-test="buyer-firstname-input")

    .form-group
      label(for="lastName") Last Name
      input#lastName(type="text" name="lastName" required placeholder="Last Name" value=(session.buyerInfo() ? session.buyerInfo().lastName() : '') data-test="buyer-lastname-input")

    .form-group
      label(for="phone") Phone Number
      input#phone(type="tel" name="phone" required placeholder="+1 (555) 123-4567" value=(session.buyerInfo() ? session.buyerInfo().phone() : '') data-test="buyer-phone-input")

    .form-actions
      button.btn.btn-primary(type="submit" data-test="buyer-continue-button") Continue to Delivery

  if session.lineItems() && session.lineItems().size() > 0
    .order-summary
      h3 Order Summary
      each item in session.lineItems()
        .summary-item
          span.item-name #{item.productName()}
          span.item-qty x#{item.quantity()}
          span.item-price #{item.lineTotal()} #{item.currencyCode()}

      if session.totals()
        .summary-total
          span.label Subtotal:
          span.value #{session.totals().subtotal()} #{session.totals().currencyCode()}

  style.
    .checkout-progress {
      display: flex;
      justify-content: space-between;
      margin-bottom: 30px;
      padding: 20px;
      background: #f0f4f8;
      border-radius: 8px;
    }
    .checkout-progress .step {
      padding: 10px 20px;
      background: #e0e0e0;
      border-radius: 4px;
      color: #666;
      font-weight: 500;
    }
    .checkout-progress .step.active {
      background: #3498db;
      color: white;
    }
    .auth-options {
      background: #e8f4fd;
      padding: 20px;
      border-radius: 8px;
      margin-bottom: 25px;
      border: 1px solid #b8daff;
    }
    .auth-options p {
      margin: 0 0 15px 0;
      color: #2c3e50;
    }
    .auth-options.logged-in {
      background: #d4edda;
      border-color: #c3e6cb;
    }
    .auth-options.logged-in p {
      margin: 0;
      color: #155724;
      font-weight: 500;
    }
    .auth-buttons {
      display: flex;
      gap: 10px;
    }
    .btn-secondary {
      background: #6c757d;
      color: white;
    }
    .btn-secondary:hover {
      background: #5a6268;
    }
    .session-summary {
      background: #f9f9f9;
      padding: 15px;
      border-radius: 6px;
      margin-bottom: 25px;
      font-size: 0.9em;
      color: #666;
    }
    .session-summary p {
      margin: 5px 0;
    }
    .error-message {
      background: #f8d7da;
      color: #721c24;
      padding: 15px;
      border-radius: 6px;
      border: 1px solid #f5c6cb;
      margin-bottom: 20px;
      font-weight: 500;
    }
    form {
      max-width: 500px;
    }
    .form-group {
      margin-bottom: 20px;
    }
    .form-group label {
      display: block;
      margin-bottom: 8px;
      font-weight: 600;
      color: #2c3e50;
    }
    .form-group input {
      width: 100%;
      padding: 12px;
      border: 1px solid #ddd;
      border-radius: 6px;
      font-size: 1em;
      box-sizing: border-box;
    }
    .form-group input:focus {
      outline: none;
      border-color: #3498db;
      box-shadow: 0 0 0 2px rgba(52, 152, 219, 0.2);
    }
    .form-actions {
      margin-top: 30px;
    }
    .btn {
      display: inline-block;
      padding: 12px 30px;
      border-radius: 5px;
      text-decoration: none;
      font-weight: 500;
      text-align: center;
      transition: background 0.2s;
      border: none;
      cursor: pointer;
      font-size: 1em;
    }
    .btn-primary {
      background: #3498db;
      color: white;
    }
    .btn-primary:hover {
      background: #2980b9;
    }
    .order-summary {
      margin-top: 40px;
      padding: 20px;
      background: #f9f9f9;
      border-radius: 8px;
      border-left: 4px solid #3498db;
    }
    .order-summary h3 {
      margin-top: 0;
      color: #2c3e50;
    }
    .summary-item {
      display: flex;
      justify-content: space-between;
      padding: 10px 0;
      border-bottom: 1px solid #eee;
    }
    .summary-item:last-child {
      border-bottom: none;
    }
    .item-name {
      flex: 2;
      color: #333;
    }
    .item-qty {
      flex: 1;
      text-align: center;
      color: #666;
    }
    .item-price {
      flex: 1;
      text-align: right;
      font-weight: 500;
    }
    .summary-total {
      display: flex;
      justify-content: space-between;
      padding-top: 15px;
      margin-top: 10px;
      border-top: 2px solid #ddd;
      font-weight: bold;
      font-size: 1.1em;
    }
