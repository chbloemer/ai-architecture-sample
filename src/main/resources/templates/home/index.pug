  style.
    .hero {
      text-align: center;
      padding: 40px 20px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      border-radius: 8px;
      margin-bottom: 40px;
    }
    .hero h2 {
      margin: 0 0 10px 0;
      font-size: 2.2em;
      color: white;
    }
    .subtitle {
      font-size: 1.2em;
      font-weight: 500;
      margin-bottom: 20px;
      opacity: 0.95;
    }
    .description {
      font-size: 1.05em;
      line-height: 1.7;
      max-width: 800px;
      margin: 0 auto;
      opacity: 0.9;
    }
    .features {
      margin-bottom: 50px;
    }
    .features h3 {
      font-size: 1.8em;
      color: #2c3e50;
      margin-bottom: 30px;
      text-align: center;
    }
    .feature-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 25px;
      margin-bottom: 40px;
    }
    .feature-card {
      background: #f8f9fa;
      border: 2px solid #e9ecef;
      border-radius: 10px;
      padding: 30px;
      text-align: center;
      transition: all 0.3s ease;
    }
    .feature-card:hover {
      border-color: #667eea;
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(102, 126, 234, 0.15);
    }
    .icon {
      font-size: 3em;
      margin-bottom: 15px;
    }
    .feature-card h4 {
      margin: 0 0 15px 0;
      color: #2c3e50;
      font-size: 1.4em;
    }
    .feature-card p {
      color: #7f8c8d;
      margin-bottom: 20px;
      line-height: 1.6;
    }
    .btn {
      display: inline-block;
      background: #667eea;
      color: white;
      padding: 12px 28px;
      border-radius: 6px;
      text-decoration: none;
      font-weight: 600;
      transition: all 0.2s;
      position: relative;
    }
    .btn:hover {
      background: #5568d3;
      transform: scale(1.05);
    }
    .badge-info {
      display: inline-block;
      background: #f39c12;
      color: white;
      padding: 2px 8px;
      border-radius: 12px;
      font-size: 0.7em;
      margin-left: 8px;
      vertical-align: middle;
    }
    .architecture {
      background: #f8f9fa;
      padding: 40px;
      border-radius: 8px;
      margin-bottom: 40px;
    }
    .architecture h3 {
      font-size: 1.8em;
      color: #2c3e50;
      margin-top: 0;
      margin-bottom: 30px;
      text-align: center;
    }
    .highlight-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
    }
    .highlight-item {
      background: white;
      padding: 20px;
      border-radius: 6px;
      border-left: 4px solid #667eea;
    }
    .highlight-item strong {
      display: block;
      color: #2c3e50;
      font-size: 1.1em;
      margin-bottom: 8px;
    }
    .highlight-item p {
      color: #7f8c8d;
      margin: 0;
      font-size: 0.95em;
      line-height: 1.5;
    }
    .documentation {
      margin-top: 40px;
    }
    .documentation h3 {
      font-size: 1.8em;
      color: #2c3e50;
      margin-bottom: 25px;
      text-align: center;
    }
    .doc-links {
      display: flex;
      flex-wrap: wrap;
      gap: 15px;
      justify-content: center;
    }
    .doc-link {
      display: flex;
      align-items: center;
      gap: 8px;
      padding: 12px 20px;
      background: white;
      border: 2px solid #e9ecef;
      border-radius: 6px;
      text-decoration: none;
      color: #2c3e50;
      font-weight: 500;
      transition: all 0.2s;
    }
    .doc-link:hover {
      border-color: #667eea;
      color: #667eea;
      transform: translateY(-2px);
    }
    .doc-icon {
      font-size: 1.3em;
    }